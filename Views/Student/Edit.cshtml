            //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Edit", "Student", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>Id:</td>
                    <td id="id">@this.Model.Id</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>
                      @*    @Html.TextBox("Name",new {this.Model.Name})*@
                        <input type="text" id="Name" name="Name" value="@this.Model.Name"/></td>
                </tr>
                <tr>
                    <td>Age:</td>
                    <td>
                      @*  @Html.TextBox("Age",new {this.Model.Age})*@
                        <input type="text" id="Age" name="Age" value="@this.Model.Age"/></td>
                </tr>
                <tr>
                    <td>Teacher:</td>
                    <td>
                        <select>
                            <optgroup label="Teachers">
                                @foreach (var item in ViewBag.Teachers)
                                {
                                    <option title="@item.Name" value="@item.Id" label="@item.Name" />
                                }
                            </optgroup>
                        </select>
                    </td>
                </tr>
            </table>

            <input type="submit" title="提交" />
        }
    </div>
</body>
</html>
