@model MVC4Razor.Models.Student

@{
    //Layout = null; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link type="text/css" href="~/Content/Test.css" />
</head>
<body>
    <div>
        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Age</td>
                    <td>Sex</td>
                    <td>Teacher</td>
                    <td>Edit Action</td>
                    <td>Delete Action</td>
                </tr>
            </thead>
            @{
                foreach (var item in this.ViewBag.Students)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@(item.Sex?"男":"女")</td>
                    <td>@item.Teacher.Name</td>
                    <td>@Html.ActionLink("Edit Action", "Edit", new { id = item.Id,Name=item.Name })</td>
                    <td>@Html.ActionLink("Delete Action", "Delete", new { id = item.Id })</td>
                </tr>
                }
            }
        </table>
    </div>
</body>
</html>
